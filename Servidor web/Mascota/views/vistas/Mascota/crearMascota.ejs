<div style='background-color:white;color:black;'>

  <h1>Crea Mascota</h1>

  <form action="/Mascota/crearMascotaForm" method="post">
    <div class="form-group">
      <label>Nombre</label>
      <input minlength=5 required type="text" class="form-control"  placeholder="mascota" name="nombre">
    </div>

    <div class="form-group">
      <label>Fecha nacimiento</label>
      <input minlength=5 required type="text" class="form-control"  placeholder="fecha nacimiento" name="fechaNacimiento">
    </div>

    <div class="form-group">
      <label>Pais nacimiento</label>
      <input minlength=5 required type="text" class="form-control"  placeholder="pais" name="paisNacimiento">
    </div>

    <div class="form-group">
      <label>Raza</label>
      <input minlength=5 required type="text" class="form-control"  placeholder="raza" name="raza">
    </div>

    <button type="submit" class="btn btn-success">Crear Mascota</button>
    <br>

  </form>
</div>
